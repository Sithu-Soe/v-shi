# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Time
scalar Void

type Category {
  id: Int!
  name: String!
  created_at: Time!
  updated_at: Time!
}

type CategoriesResp {
  list: [Category!]!
  total: Int!
}

input FilterCatrgory {
  id: Int
  name: String
  start_time: String
  end_time: String
}

input UpdateCategory {
  id: Int!
  name: String!
}

type Query {
  category(id: Int!): Category!
  categories(input: FilterCatrgory!): CategoriesResp!
  # categories: [Category!]!
}

type Mutation {
  createCategory(name: String!): Category!
  updateCategory(input: UpdateCategory!): Void
}

